bindsym Mod4+w exec --no-startup-id chromium
#--disable-gpu --disable-software-rasterizer
bindsym --release Mod4+c exec --no-startup-id shot
bindsym Mod4+e exec --no-startup-id nautilus
bindsym --release Mod4+q exec --no-startup-id /home/oxore/altera_lite/16.0/quartus/bin/quartus
bindsym --release Mod4+s exec --no-startup-id gnome-terminal -x "/home/oxore/altera_lite/16.0/modelsim_ase/bin/vsim"

# volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-mute 0 false; exec --no-startup-id pactl set-sink-volume 0 +5% && notify-send -u low "Volume " "$(~/.i3/scripts/volume | head -n1)"
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-mute 0 false; exec --no-startup-id pactl set-sink-volume 0 -5% && notify-send -u low "Volume " "$(~/.i3/scripts/volume | head -n1)"
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse -q set Master toggle
bindsym XF86AudioNext exec --no-startup-id deadbeef --next
bindsym XF86AudioPrev exec --no-startup-id deadbeef --prev
bindsym XF86AudioPlay exec --no-startup-id deadbeef --play-pause
bindsym XF86AudioStop exec --no-startup-id deadbeef --stop
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5

# mouse follow focusing off
focus_follows_mouse no

#no_borders
hide_edge_borders both
new_window 1pixel
new_float 1pixel

