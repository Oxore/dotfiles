for_window [class="Qsys"] floating enable
for_window [class="Pidgin"] floating enable
assign [class="Nautilus"] 2
assign [class="Chromium"] 1
for_window [class="SFML"] floating enable
for_window [title="galculator"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

bindsym Mod4+Shift+d exec --no-startup-id xrandr --output HDMI-0 --off --output DVI-I-1 --mode 1280x1024 --pos 0x0 --rotate    normal --output DVI-I-0 --primary --mode 1920x1200 --pos 1280x0 --rotate normal --output DVI-I-3 --off --output DVI-I-2 --off
